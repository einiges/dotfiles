
# -- Monitor Setup --
export primonitor='DVI-D-1'
export secmonitor='HDMI-A-0'
xrandr --output $primonitor --auto --primary \
       --output $secmonitor --auto --left-of $primonitor


# -- Keyboard Layout --
setxkbmap -layout de -variant neo -option altwin:swap_lalt_lwin


# -- Background --
feh --no-fehbg --bg-fill --no-xinerama $HOME/Pictures/Wallpapers/current


# -- Misc X --
test -f $XDG_CONFIG_HOME/X11/xresources && xrdb -merge $_
test -f $XDG_CONFIG_HOME/X11/xmodmap    && xmodmap    $_


# -- systemd: set DISPLAY and XAUTHORITY --
test -f /etc/X11/xinit/xinitrc.d/50-systemd-user.sh && . $_


# -- Mouse Cursor --
xsetroot -cursor_name left_ptr


# -- Disable DPMS --
xset dpms 0 800 800


# -- Smart screenlock --
xautolock -time 8 -corners '--00' -cornersize 20 -detectsleep -locker "xsssmart -r $LOCKER" -nowlocker "$LOCKER" &


# -- Launch Applications --
{
	sleep 3
	$BROWSER &
	$TERMINAL -c ncmpcpp    -e ncmpcpp &
	$TERMINAL -c neomutt    -e neomutt &
	$TERMINAL -c calcurse   -e calcurse &
	$TERMINAL -c newsboat   -e newsboat &
} &


# -- Start Environment --
sxhkd -m 1 $XDG_CONFIG_HOME/bspwm/sxhkdrc &
compton --config "$XDG_CONFIG_HOME/bspwm/compton.conf" &
monitor=$primonitor polybar -q bspwm-desktop &
exec bspwm


# vim:ft=sh
