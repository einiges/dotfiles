
# -- Monitor Setup --
xrandr --output $MONITOR0 --auto --primary --output $MONITOR1 --auto --left-of $MONITOR0


# -- Keyboard Layout --
setxkbmap -layout de -variant neo -option altwin:swap_lalt_lwin


# -- Background --
feh --no-fehbg --bg-fill --no-xinerama $HOME/Pictures/wallpapers/current


# -- Misc X --
test -f $XDG_CONFIG_HOME/X11/xresources && xrdb -merge $_
test -f $XDG_CONFIG_HOME/X11/xmodmap    && xmodmap    $_


# -- systemd: set DISPLAY and XAUTHORITY --
test -f /etc/X11/xinit/xinitrc.d/50-systemd-user.sh && . $_


# -- Mouse Cursor --
xsetroot -cursor_name left_ptr


# -- Disable DPMS --
xset dpms 0 800 800


# -- Smart screenlock --
xautolock -time 8 -corners '--00' -cornersize 20 -detectsleep -locker "xsssmart $LOCKER" -nowlocker "$LOCKER" &


# -- Launch Applications --
{
	sleep 3
	$BROWSER &
	$TERMINAL -n ncmpcpp    -e ncmpcpp &
	$TERMINAL -n neomutt    -e $SHELL -c neomutt &
	$TERMINAL -n calcurse   -e calcurse &
	$TERMINAL -n newsboat   -e newsboat &
} &


# -- Start WM --
sxhkd -m -1 $XDG_CONFIG_HOME/bspwm/sxhkdrc &
exec bspwm


# vim:ft=sh
