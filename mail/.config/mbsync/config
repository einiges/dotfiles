# vim ft=config


# -- Globals --

SyncState *
Create Both
Expunge Both


# -- Outlook --

IMAPAccount outlook
	Host imap-mail.outlook.com
	User <@MAIL_3@>
	SSLType IMAPS
	PassCmd "pass mail/outlook/passwd"

IMAPStore outlook-remote
	Account outlook

MaildirStore outlook-local
	Path  ~/.mail/outlook/
	Inbox ~/.mail/outlook/Inbox
	SubFolders Verbatim

Channel outlook-inbox
	Far :outlook-remote:Inbox
	Near  :outlook-local:Inbox

Channel outlook-remaining
	Far :outlook-remote:
	Near  :outlook-local:
	Patterns * !Inbox !Outbox !Notes

Group outlook
	Channel outlook-inbox
	Channel outlook-remaining



# -- GMX --

IMAPAccount gmx
	Host imap.gmx.net
	User <@MAIL_1@>
	SSLType IMAPS
	PassCmd "pass mail/gmx/passwd"

IMAPStore gmx-remote
	Account gmx

MaildirStore gmx-local
	Path  ~/.mail/gmx/ # trailing /
	Inbox ~/.mail/gmx/Inbox
	SubFolders Verbatim

Channel gmx-inbox
	Far :gmx-remote:INBOX
	Near  :gmx-local:Inbox

Channel gmx-archive
	Far :gmx-remote:Archiv
	Near  :gmx-local:Archive

Channel gmx-deleted
	Far :gmx-remote:"Gel&APY-scht" # UTF-7â€¦
	Near  :gmx-local:Deleted

Channel gmx-drafts
	Far :gmx-remote:"Entw&APw-rfe"
	Near  :gmx-local:Drafts

Channel gmx-junk
	Far :gmx-remote:Spamverdacht
	Near  :gmx-local:Junk

Channel gmx-sent
	Far :gmx-remote:Gesendet
	Near  :gmx-local:Sent

Group gmx
	Channel gmx-inbox
	Channel gmx-archive
	Channel gmx-deleted
	Channel gmx-drafts
	Channel gmx-junk
	Channel gmx-sent



# -- <@NAME2@>.me | mailbox.org --

