# vim ft=config


# -- Globals --

SyncState *
Create Slave
Expunge Both


# -- Outlook --

IMAPAccount outlook
	Host imap-mail.outlook.com
	User <@MAIL_OUTLOOK@>
	SSLType IMAPS
	PassCmd "pass mail/outlook"

IMAPStore outlook-remote
	Account outlook

MaildirStore outlook-local
	Path  ~/.mail/outlook/
	Inbox ~/.mail/outlook/Inbox
	SubFolders Verbatim
	Flatten "."

Channel outlook-inbox
	Master :outlook-remote:Inbox
	Slave  :outlook-local:Inbox

Channel outlook-remaining
	Master :outlook-remote:
	Slave  :outlook-local:
	Patterns * !Inbox !Outbox !Notes

Group outlook
	Channel outlook-inbox
	Channel outlook-remaining



# -- GMX --

IMAPAccount gmx
	Host imap.gmx.net
	User <@MAIL_GMX1@>
	SSLType IMAPS
	PassCmd "pass mail/gmx"

IMAPStore gmx-remote
	Account gmx

MaildirStore gmx-local
	Path  ~/.mail/gmx/ # trailing /
	Inbox ~/.mail/gmx/Inbox
	SubFolders Verbatim
	Flatten "."

Channel gmx-inbox
	Master :gmx-remote:INBOX
	Slave  :gmx-local:Inbox

Channel gmx-archive
	Master :gmx-remote:Archiv
	Slave  :gmx-local:Archive

Channel gmx-deleted
	Master :gmx-remote:"Gel&APY-scht" # UTF-7â€¦
	Slave  :gmx-local:Deleted

Channel gmx-drafts
	Master :gmx-remote:"Entw&APw-rfe"
	Slave  :gmx-local:Drafts

Channel gmx-junk
	Master :gmx-remote:Spamverdacht
	Slave  :gmx-local:Junk

Channel gmx-sent
	Master :gmx-remote:Gesendet
	Slave  :gmx-local:Sent

Group gmx
	Channel gmx-inbox
	Channel gmx-archive
	Channel gmx-deleted
	Channel gmx-drafts
	Channel gmx-junk
	Channel gmx-sent

