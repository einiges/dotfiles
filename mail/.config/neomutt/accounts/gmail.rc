# vim:ft=muttrc

set from = "<@MAIL_4@>"
set sendmail = "msmtp -a gmail"


# -- Directories --
set spoolfile    = "=gmail/Inbox"
set postponed    = "=gmail/Drafts"
set record       = "=gmail/Sent"
set trash        = "=gmail/Deleted"


# -- Misc --
unset signature


# -- Mailboxes --
unmailboxes *
mailboxes \
	"=gmail/Inbox" \
	`echo $HOME/.mail/gmail/*`

