
# -- My Variables --
set my_co = "$XDG_CONFIG_HOME/neomutt"
set my_ca = "$XDG_CACHE_HOME/neomutt"
set my_accounts = "$my_co/accounts"


# -- General --
set   abort_noattach = ask-yes
set   attach_keyword = "\<(anhängen|angehängt|anhang|anhänge|hängt an)\>"
unset beep
set   beep_new
set   delete
set   display_filter = "sed -f $my_co/display_filter.sed"
set   header_cache = $my_ca/headers
unset help
unset imap_peek
set   mail_check = 0 # mbsync
set   mail_check_stats
set   mail_check_stats_interval = 20
unset mark_old
set   mailcap_path = $my_co/mailcap
set   mbox_type = Maildir
set   message_cachedir = $my_ca/bodies
#set   new_mail_command = "notify-send --icon=mutt 'Mail arrived' 'new: %n, unread: %u';"
set   query_command = "abook --mutt-query %s"
set   quit
set   reverse_name
set   rfc2047_parameters
set   ssl_starttls
set   ssl_force_tls
set   timeout = 120
set   ts_enabled
unset wait_key


# -- Compose --
unset abort_nosubject
set   abort_unmodified
set   empty_subject = "Re:"
set   fast_reply
unset forward_decode
set   mime_forward
set   mime_forward_rest
set   use_envelope_from
set   realname = "<@NAME12@>"
set   send_charset = "UTF-8"
set   text_flowed

# -- History --
set history_file = $my_ca/history
set history_remove_dups
set save_history = 10


# -- Index --
set   sort = threads
set   sort_aux = reverse-last-date-received
set   sort_browser = date
set   strict_threads
set   uncollapse_jump


# -- Sidebar --
color sidebar_indicator black blue
color sidebar_highlight white black
set   sidebar_divider_char = "│"
set   sidebar_folder_indent
set   sidebar_indent_string = " "
set   sidebar_short_path
set   sidebar_sort_method = unsorted
unset sidebar_visible
set   sidebar_width = 17
set   sidebar_format = "%B%*  %?N?%N? "


# -- Pager --
unset markers
set   menu_scroll
set   pager_context = 4
set   pager_index_lines = 10
set   pager_stop
set   tilde

alternative_order text/plain text/enriched text/html
auto_view text/html


# -- Formats --
set   attach_format  = "%3n %u%D%I%t │ %7s %5M │ %T %.40d%> [%.6e%?C?, %C?]"
set   attribution = "Am %d, schrieb %n:"
set   date_format  = "%a, %d. %b %Y um %H:%M Uhr"
set   folder_format = "%2C ┆ %f"
set   forward_format = "Fw: %s"
set   index_format = "%4C ┆ %Z │ %-25.25F │ %s %*  │ %{%e %_2m %y} ┆ %{%k %_2M} │ %4c"
set   status_format = "-%r- %f [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%> (%P) "


# -- Header --
ignore *
unhdr_order *
unignore  From: To: Cc: Subject:
hdr_order From: To: Cc: Subject:



# -- Sources --
source $my_co/gpg.rc
source $my_co/colors.rc
source $my_co/bindings.rc
source $my_co/account_management.rc
source $my_co/notmuch.rc

