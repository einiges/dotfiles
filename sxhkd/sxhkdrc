
# - Reload sxhkd -
super + alt + q
	pkill --signal SIGUSR1 sxhkd


# -- application launching --

# - terminal
super + Return
	$TERMINAL

# - application launcher
super + l
	rofi -show drun

# - pass
super + x
	PINENTRY_USER_DATA=gtk passmenu-rofi

# - screenshots
@{_,shift} + Print
	scrot {_,-s} -e 'mv $f ~/Pictures/Screenshots'



# -- media keys --

# - navigate playlist
XF86Audio{Play,Stop,Next,Prev}
	mpc -q {toggle,stop,next,prev}

# - volume (basic)
XF86AudioMute
	amixer -qD pulse set Master toggle

XF86Audio{Raise,Lower}Volume
	amixer -qD pulse set Master 1%{+,-}

control + XF86Audio{Raise,Lower}Volume
	amixer -qD pulse set Master 5%{+,-}


# vim:ft=conf

