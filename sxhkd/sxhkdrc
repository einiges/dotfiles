
# - Reload sxhkd -
alt + super + q
	pkill --signal SIGUSR1 sxhkd


# -- application launching --

# - terminal
alt + Return
	$TERMINAL

# - application launcher
alt + l
	dmenu_run

# - pass
alt + x
	PINENTRY_USER_DATA=gtk passmenu

# - screenshots
{_,shift} + Print
	import {_,-window root} ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png



# -- media keys --

# - navigate playlist
XF86Audio{Play,Stop,Next,Prev}
	mpc -q {toggle,stop,next,prev}

# - volume (basic)
XF86AudioMute
	amixer -qD pulse set Master toggle

XF86Audio{Raise,Lower}Volume
	amixer -qD pulse set Master 1%{+,-}

control + XF86Audio{Raise,Lower}Volume
	amixer -qD pulse set Master 5%{+,-}


# vim:ft=conf

