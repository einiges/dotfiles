[{
	"name": "primary",
	"output": "DP-1",
	"position": "left",
	"width": 32,
	"margin": "5px 2px 5px 0",
	"spacing": 2,
	"reload_style_on_change": true,

	"modules-left": [
		"privacy",
		"hyprland/workspaces",
	],

	//"modules-center": [
	//	"mpris",
	//],

	"modules-right": [
		"tray",
		"network",
		//"backlight",
		"hyprland/language",

		"wireplumber#sink",
		"wireplumber#source",

		"clock#date",
		"clock#time",
	],




	"hyprland/workspaces": {
		"rotate": 90,
		"all-outputs": true,
		"sort": "id",
		"format": "{icon}",
		"format-icons": {
			"1":  "",
			"2":  "󰅩",
			"3":  "",
			"4":  "",
			"5":  "",
			"8":  "󰻞",
			"9":  "",
			"10": "󰕰",
		},
	},

	"hyprland/language": {
		"rotate": 90,
		"format": "{}",
		"format-de-neo": "neo",
		"format-th": "thai",
		"format-de": "qwertz",

		"on-scroll-down": "hyprctl switchxkblayout all next",
		"on-scroll-up":   "hyprctl switchxkblayout all prev",
	},

	// FIXME: playerctld is broken

