# vim: ft=zsh

function {
local src
for src in "$ZDOTDIR"/env.d/env.zsh "$ZDOTDIR"/env.d/*/*(.,@N); do
	source "$src"
done
}

export TERMCMD=$TERMINAL # ranger

# dircolors
DIRCOLORS="$XDG_CONFIG_HOME"/dircolors/solarized_light
DIRCOLORS_GEN="$XDG_CACHE_HOME"/zsh/dircolors.sh
source $DIRCOLORS_GEN

# GnuPG
export GNUPGHOME="$XDG_CONFIG_HOME"/gnupg
export GPG_TTY="$TTY"

# history
export SAVEHIST=50000
export HISTSIZE=50000
export HISTFILE="$XDG_STATE_HOME/${SHELL##*/}"/history

# pass
export PASSWORD_STORE_DIR="$XDG_DATA_HOME"/password-store
export PASSWORD_STORE_CLIP_TIME=3
export PASSWORD_STORE_X_SELECTION=primary

# less
export LESS='-iRc~'
export LESSHISTFILE="$XDG_STATE_HOME"/less/history
export    LESSKEYIN="$XDG_CONFIG_HOME"/less/lesskey

# docker
export DOCKER_CONFIG="$XDG_CONFIG_HOME"/docker

# mariadb
export   MARIADB_HOME="$XDG_CONFIG_HOME"/mariadb
export MYSQL_HISTFILE="$XDG_STATE_HOME"/mariadb/history

# ncurses
#export TERMINFO="$XDG_DATA_HOME"/terminfo
#export TERMINFO_DIRS="$TERMINFO"

# notmuch
export NOTMUCH_CONFIG="$XDG_CONFIG_HOME"/notmuch/config

# irb
export IRBRC="$XDG_CONFIG_HOME"/irb/irbrc

# gtk
export GTK_RC_FILES="$XDG_CONFIG_HOME"/gtk-1.0/gtkrc
export GTK2_RC_FILES="$XDG_CONFIG_HOME"/gtk-2.0/gtkrc

# mplayer
export MPLAYER_HOME="$XDG_CONFIG_HOME"/mplayer

# gimp
export GIMP2_DIRECTORY="$XDG_CONFIG_HOME"/gimp

# KDE
export KDEHOME="$XDG_CONFIG_HOME"/kde

# weechat
export WEECHAT_HOME="$XDG_CONFIG_HOME"/weechat

# readline
#export INPUTRC="$XDG_CONFIG_HOME"/readline/inputrc

# TeX
export TEXMFHOME="$XDG_DATA_HOME"/texlive/texmf
export TEXMFCONFIG="$XDG_DATA_HOME"/texlive/texmf-config
export TEXMFVAR="$XDG_DATA_HOME"/texlive/texmf-var


