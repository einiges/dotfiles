# vim: ft=zsh

function {

setopt   autocd
setopt   auto_pushd
setopt   cdable_vars
setopt   pushd_silent
setopt   pushd_to_home
setopt   pushd_minus
unsetopt pushd_ignore_dups

setopt   auto_param_keys
setopt   auto_param_slash
setopt   auto_resume
unsetopt beep
unsetopt clobber
setopt   correct
unsetopt correct_all
setopt   interactive_comments
setopt   magic_equal_subst
setopt   rm_star_wait


setopt   append_history
setopt   hist_expire_dups_first
setopt   hist_find_no_dups
setopt   hist_ignore_all_dups
setopt   hist_ignore_dups
setopt   hist_ignore_space
setopt   hist_no_store
setopt   hist_reduce_blanks
setopt   hist_save_no_dups
setopt   hist_verify
setopt   inc_append_history
setopt   share_history


setopt   always_to_end
setopt   auto_list
setopt   extended_glob
unsetopt list_ambiguous
setopt   glob_star_short

autoload -Uz "$ZDOTDIR"/functions/*(.,@N)

local -a sources
sources=(
	"$ZDOTDIR"/rc.d/plugins.zsh
	"$ZDOTDIR"/modules/*.zsh(.,@N)
	"$ZDOTDIR"/rc.d/aliases.zsh
	"$ZDOTDIR"/rc.d/completions.zsh
	"$ZDOTDIR"/rc.d/dirhashes.zsh
	"$ZDOTDIR"/rc.d/keybindings.zsh
	"$ZDOTDIR"/rc.d/prompt.zsh
	"$ZDOTDIR"/rc.d/*/*.zsh(.,@N)
)

local src
for src in "${(@)sources}"; do
	source "$src"
done

}

